{
  "source": {
      "exclude": ["node_modules"]             // Be gone, node_modules.
  },
  "recurseDepth": 10,                         // Only go 10 levels deep.
  "opts": {
      "destination": "./component-docs/",               // Where I want my docs to be generated.
      "recurse": true,                         // Same as using -r or --recurse
      "template": "node_modules/docdash"
  },

    "docdash": {
      "static": false,
      "sectionOrder": [
          "Modules",
          "Classes",
          "Externals",
          "Events",
          "Namespaces",
          "Mixins",
          "Tutorials",
          "Interfaces"
      ],

      "search": true
  }

}
